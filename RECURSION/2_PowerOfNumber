import java.util.Scanner;
class Math{
    public static int pow(int base,int p) {
        if(p==0)
            return 1;
        else
            return base*pow(base,p-1);
    }
}
public class Recursion_2 {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.println("Enter the base and pow: ");
        int b=in.nextInt();
        int p=in.nextInt();
        System.out.println("Power of Base value : "+Math.pow(b,p));
    }
}
